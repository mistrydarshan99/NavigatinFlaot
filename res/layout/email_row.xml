<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txtEmailName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/darkslate"
                android:textSize="15sp"
                android:text="demo 1"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:paddingBottom="2dp"/>

        <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/darkslate"
                android:textSize="14sp"
                android:text="Oct 9"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:paddingBottom="2dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/date_circle"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        <TextView
                android:id="@+id/txtEmailSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkslate"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:textSize="15sp"
                android:text="This is demo of subject that is given here"
                android:textStyle="bold"
                android:singleLine="true"
                />

    </LinearLayout>

    <TextView
            android:id="@+id/txtEmailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="This is demo of subject that is given here"
            android:singleLine="true"
            />

</LinearLayout>

